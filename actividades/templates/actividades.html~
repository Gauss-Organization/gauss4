{% block ready %}
  {# Función para adaptar copia/paste de procesadores de texto #}
  function removeTags(string){
    return string.replace(/(?:<(?:script|style)[^>]*>[\s\S]*?<\/(?:script|style)>|<[!\/]?[a-z]\w*(?:\s*[a-z][\w\-]*=?[^>]*)*>|<!--[\s\S]*?-->|<\?[\s\S]*?\?>)[\r\n]*/gi, ''); }

  {# Inicialización de los iconos de control de la página #}
  visualizar(['actividad_sign','actividades_sign']);
  $( "#actividad_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Ver actividades en las que puedo participar');
  {% if request.session.gauser_extra|has_permiso:'add_actividades_grupo' %}
      visualizar(['plus_sign','ok_sign','remove_sign']);
      $( "#plus_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Añadir una nueva actividad');
  {% endif %}

  {# Acciones de control de la página #}
  $( '#plus_sign' ).click(function(){ if( $(this).hasClass('navegar') ) {
      $('#actividad_id').val('');
      $('#action').val('grabar_actividad');
      $.post("/add_actividad/", {action:'nueva'},function(data) {
	  $('#div_actividades').html(data);
	  $( "#actividades_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Ver todas las actividades');
	  $( "#actividad_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Ver actividades en las que puedo participar');
	  $( "#plus_sign" ).removeClass('navegar').addClass('no_navegar').attr('title','');
	  $( "#ok_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Guardar la nueva actividad');}); }});

  $('#menucabecera').on('click', '#remove_sign', function(event){ if( $(this).hasClass('navegar') ) {
      $('#action').val('borrar_actividad');
      document.{{formname}}.submit();
      return false;}});
  
  $('#menucabecera').on('click', '#ok_sign', function(event){ if( $(this).hasClass('navegar') ) {
      if ($('#action').val() == 'add_colaborador'){
	  event.preventDefault();
	  $('#{{formname}}').ajaxSubmit({
	      url: '/guardar_colaborador_participante/',
	      success: function(data) { $('#div_actividades').html(data); } });
	  return false;
      }else if ($('#action').val() == 'add_participante'){
	  event.preventDefault();
	  $('#{{formname}}').ajaxSubmit({
	      url: '/guardar_colaborador_participante/',
	      success: function(data) { $('#div_actividades').html(data); } });
	  return false;
      }else if ($('#action').val() == 'grabar_actividad'){  document.{{formname}}.submit(); }    
      return false;}});

  $('#actividad_sign').click(function () { if( $(this).hasClass('navegar') ) {
      $( "#ok_sign" ).removeClass('navegar').addClass('no_navegar').attr('title','');
      $( "#actividad_sign" ).removeClass('navegar').addClass('no_navegar').attr('title','');
      $( "#actividades_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Ver todas las actividades');
      {% if request.session.gauser_extra|has_permiso:'add_actividades_grupo' %}
	$( "#plus_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Añadir una nueva actividad');
      {% endif %}
      $.post("/mis_actividades/", {},function(data) {
	    $('#div_actividades').html(data);}); }});

  $('#actividades_sign').click(function () { if( $(this).hasClass('navegar') ) {
      $( "#ok_sign" ).removeClass('navegar').addClass('no_navegar').attr('title','');
      $( "#actividades_sign" ).removeClass('navegar').addClass('no_navegar').attr('title','');
      $( "#actividad_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Ver actividades en las que puedo participar');
      {% if request.session.gauser_extra|has_permiso:'add_actividades_grupo' %}
	$( "#plus_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Añadir una nueva actividad');
      {% endif %}
      $.post("/total_actividades/", {},function(data) {
	    $('#div_actividades').html(data);});}});

  $('#pdf_actividad').click(function () {  $('#action').val('pdf_actividad'); document.{{formname}}.submit(); });

  $('.').on('click', '.show_hide_participantes', function(){
      var id = $(this).attr('id').split('_')[1];
      if ($('#participantes_'+id).text().length == 0){
	$.post("/ver_participantes/", { id: id},function(data) {
	    $('#participantes_'+id).html(data);$('#participantes_'+id).slideToggle();});  
	return false;
      }else{ $('#participantes_'+id).slideToggle(); } });

  $('.').on('click', '.actividad_texto', function(){
      var id = $(this).attr('id').split('_')[1]
      if ($('#div_'+id).text().length == 0){
	$.post("/ver_actividad/", { id: id},function(data) {
	    $('#div_'+id).html(data);$('#div_'+id).slideToggle();});  
	return false;
      }else{ $('#div_'+id).slideToggle(); } });

  $('.').on('click', '.modificar_actividad', function(){
      var id = $(this).attr('id').split('___')[1]
      $('#action').val('grabar_actividad');
      $('#actividad_id').val(id);
      $.post("/add_actividad/", {action:'modificar',id:id},function(data) {
	  $('#div_actividades').html(data);
	  $( "#actividades_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Ver todas las actividades');
	  $( "#actividad_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Ver actividades en las que puedo participar');
	  $( "#plus_sign" ).removeClass('navegar').addClass('no_navegar').attr('title','');
	  $( "#ok_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Guardar la nueva actividad');});
      return false;});

  $('.').on('click', '.add_colaborador', function(){
      $('#action').val('add_colaborador');
      var id = $(this).attr('id').split('___')[1]
      $('#actividad_id').val(id);
      $.post("/add_colaborador/", {id:id},function(data) {
	  $('#div_actividades').html(data);
	  $( "#actividades_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Ver todas las actividades');
	  $( "#actividad_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Ver actividades en las que puedo participar');
	  $( "#plus_sign" ).removeClass('navegar').addClass('no_navegar').attr('title','');
	  $( "#ok_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Añadir colaborador');});
      return false;});

  $('.').on('click', '.add_participante', function(){
      $('#action').val('add_participante');
      var id = $(this).attr('id').split('___')[1]
      $('#actividad_id').val(id);
      $.post("/add_participante/", {id:id},function(data) {
	  $('#div_actividades').html(data);
	  $( "#actividades_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Ver todas las actividades');
	  $( "#actividad_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Ver actividades en las que puedo participar');
	  $( "#plus_sign" ).removeClass('navegar').addClass('no_navegar').attr('title','');
	  $( "#ok_sign" ).removeClass('no_navegar').addClass('navegar').attr('title','Añadir educando participante en la actividad');});
      return false;});

  $('.').on('click', '.borra_col_par', function(){
      var id = $(this).attr('id').split('___');
      if (id[0]=='participante'){
	$.post("/borra_colaborador_participante/", {id:id[1], tipo:'participante'},function() {$('#tr_participante___'+id[1]).hide();});
      }else{
	$.post("/borra_colaborador_participante/", {id:id[1], tipo:'colaborador'},function() {$('#tr_colaborador___'+id[1]).hide();});}
      return false;});
  
{% endblock %}


